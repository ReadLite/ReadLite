{
  "name": "read-lite",
  "displayName": "ReadLite - Simple Reading Mode",
  "version": "1.0.2",
  "description": "A simple reading mode extension to make web reading more comfortable",
  "author": "ReadLite Team",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .plasmo/ build/",
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo build --zip",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\""
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@plasmohq/storage": "^1.9.0",
    "dompurify": "^3.0.6",
    "franc-min": "^6.2.0",
    "plasmo": "^0.90.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.312",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/turndown": "^5.0.5",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jimp": "^1.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "manifest": {
    "default_locale": "en",
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_title": "ReadLite - Simple Reading Mode"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }
}
