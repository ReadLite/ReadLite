{
  "name": "read-lite",
  "displayName": "ReadLite - Simple Reading Mode",
  "version": "1.0.2",
  "description": "A simple reading mode extension to make web reading more comfortable",
  "author": "ReadLite Team",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .plasmo/ build/",
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo build --zip",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\""
  },
  "dependencies": {
    "@chatscope/chat-ui-kit-react": "^2.0.3",
    "@chatscope/chat-ui-kit-styles": "^1.4.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mozilla/readability": "^0.6.0",
    "@mui/icons-material": "^7.0.1",
    "@mui/material": "^7.0.1",
    "@plasmohq/storage": "^1.9.0",
    "dompurify": "^3.2.4",
    "franc-min": "^6.2.0",
    "marked": "^15.0.7",
    "plasmo": "^0.90.3",
    "portkey-ai": "^1.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.312",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.11",
    "@types/marked": "^5.0.2",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/turndown": "^5.0.5",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jimp": "^1.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "manifest": {
    "default_locale": "en",
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage",
      "sidePanel"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_title": "ReadLite - Simple Reading Mode"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    }
  }
}
